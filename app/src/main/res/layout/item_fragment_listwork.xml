<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:id="@+id/imgArtWork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_default"
            />

        <TextView
            android:id="@+id/textHash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:layout_alignLeft="@id/imgArtWork"
            android:layout_alignTop="@id/imgArtWork"

            android:textColor="#000000"
            android:textSize="15dp"
            android:text="#해시태그"
           android:textStyle="normal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/imgArtWork"
            android:layout_alignRight="@+id/imgArtWork"
            android:layout_marginRight="5dp"
            >

            <Button
                android:id="@+id/btnUpdateWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update"
                />

            <Button
                android:id="@+id/btnDeleteWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>